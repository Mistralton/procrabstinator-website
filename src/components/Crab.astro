<div class="relative">
  <img alt="Ferris" class="absolute ferris -top-7 -z-10" src="/ferris.png" width={100} height={100}>
  <img alt="left eye" class="eye absolute left-11 top-1" src="/ferris-whole.png" width={10} height={10}>
  <img alt="right eye" class="eye absolute left-[3.75rem] top-1" src="/ferris-whole.png" width={10} height={10}>
  <iframe class="mt-6 w-[300px] h-[169px] md:w-[560px] md:h-[315px]" src="https://www.youtube.com/embed/AtXDcw34lqI" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
</div>

<script>
  document.addEventListener('mousemove', (event) => {
    const xPos = event.clientX
    const yPos = event.clientY
    const fatherCrab = document.querySelector('.ferris')!
    const crabHome = fatherCrab.getBoundingClientRect()
    const xCenter = crabHome.left + crabHome.width /2
    const yCenter = crabHome.top + crabHome.height / 2
    const toConvert = Math.atan2((yCenter - yPos), (xCenter - xPos))
    const eyes = document.querySelectorAll('.eye')
    eyes.forEach(eye => (eye as HTMLImageElement).style.transform = `rotate(${toConvert}rad)`)
  })
</script>